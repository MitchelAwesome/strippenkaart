{% extends 'base.html.twig' %}

{% block body %}
    <h1>Strip</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ strip.id }}</td>
            </tr>
            <tr>
                <th>Purchasedat</th>
                <td>{% if strip.purchasedAt %}{{ strip.purchasedAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Used</th>
                <td>{% if strip.used %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Usedat</th>
                <td>{% if strip.usedAt %}{{ strip.usedAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ strip.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('strip_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('strip_edit', { 'id': strip.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
